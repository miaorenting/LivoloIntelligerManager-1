<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@android:color/white">
    <include
        layout="@layout/action_bar_top"/>
    <LinearLayout
        android:id="@+id/secound_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@id/top_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/room_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/icon_border"
                android:src="@mipmap/room_black_0" />
            <EditText
                android:id="@+id/room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:hint="@string/room_name"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:gravity="right"
                android:background="@null"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:background="@color/lightblue"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:text="@string/selected_btn"/>
    <livolo.com.livolointelligermanager.view.MyListView
        android:id="@+id/unbind_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </livolo.com.livolointelligermanager.view.MyListView>
    <TextView
        android:id="@+id/bind_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:background="@color/lightblue"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:text="@string/bind_room"/>
    <livolo.com.livolointelligermanager.view.MyListView
        android:id="@+id/bind_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </livolo.com.livolointelligermanager.view.MyListView>

</LinearLayout>