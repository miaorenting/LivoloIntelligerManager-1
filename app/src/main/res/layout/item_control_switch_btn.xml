<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@android:color/white" />

    <iammert.com.huelib.HueSeekBar
        android:visibility="gone"
        android:id="@+id/hueSeekBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:bottomSeekHeight="15dp"
        app:bottomSeekToggleWidth="15dp"
        app:colorEmpty="@color/midblue"
        app:colorFill="@color/lightblue"
        app:colorToggle="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                style="@style/RoomSwitchBtnStyle" />

            <TextView
                android:id="@+id/btn_2"
                style="@style/RoomSwitchBtnStyle"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/btn_3"
                style="@style/RoomSwitchBtnStyle"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/switch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <CheckedTextView
                android:id="@+id/switch_control"
                android:layout_width="40dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/switch_btn_off"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>